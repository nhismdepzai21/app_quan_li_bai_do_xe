    <!-- Màu nền -->
    <solid android:color="#FFFFFF" />

    <!-- Viền -->
    <stroke
        android:width="2dp"
        android:color="#2196F3" />

    <!-- Bo góc -->
    <corners android:radius="5dp" />

    <!-- Khoảng cách bên trong -->
