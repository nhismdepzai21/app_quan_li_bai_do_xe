<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".lichsuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="921dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="#42A5F5"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="22dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="Quay lại"
                android:padding="8dp"
                android:src="@android:drawable/ic_menu_revert"
                tools:background="#42A5F5" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="381dp"
                android:layout_height="wrap_content"
                android:background="#42A5F5"
                android:text="Lịch Sử Đỗ Xe"
                android:textAlignment="center"
                android:textColor="#FFFDFD"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/slot_background"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvViTri"
                android:layout_width="47dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Vị trí"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvVaoRa"
                android:layout_width="170dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Thời gian "
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/BienSo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text=" Biển Số Xe"
                android:textAlignment="center"
                android:textStyle="bold" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewLichSu"
            android:layout_width="match_parent"
            android:layout_height="796dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" />

        <FrameLayout
            android:id="@+id/fullscreenImageContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#CC000000"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone">

            <ImageView
                android:id="@+id/fullscreenImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter" />
        </FrameLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>